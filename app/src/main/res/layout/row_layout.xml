<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="26dp"
    android:paddingBottom="26dp"
    android:background="@color/purple_500"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/episode_number_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode"
        app:layout_constraintStart_toStartOf="@+id/title_txt"
        app:layout_constraintTop_toBottomOf="@+id/title_txt" />

    <TextView
        android:id="@+id/synopsis_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Synopsis"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="@+id/episode_number_txt"
        app:layout_constraintTop_toBottomOf="@+id/episode_number_txt" />

    <TextView
        android:id="@+id/dysney_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disney url"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="@+id/synopsis_txt"
        app:layout_constraintTop_toBottomOf="@+id/synopsis_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>